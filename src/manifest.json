{
  "manifest_version": 2,
  "name": "Whistle HQ",
  "description": "Prototype app for anonymous work discussion",
  "version": "1.0.0",
  "icons": {
    "64": "assets/icon-128.png",
    "128": "assets/icon-256.png"
  },
  "browser_action": {
    "default_icon": "assets/icon-128.png",
    "default_title": "Whistle HQ discussions",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
